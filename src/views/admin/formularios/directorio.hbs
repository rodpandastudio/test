<div class="container-fluid mt-2">
    <section class="content">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-sm-12">
                        <h3 class="card-title">Directorio de formularios</h3>
                    </div>
                    <div class="col-sm-12">
                        {{>success}}
                        {{>errors}}
                    </div>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th class="text-center">Nombre del formulario</th>
                        <th class="text-center">Cantidad de paginas</th>
                        <th class="text-center">Editar</th>
                        <th class="text-center">Formulario</th>
                        <th class="text-center">Generar iframe <span class="text-muted">(Principal)</span> </th>
                    </tr>
                </thead>
                <tbody>
                    {{#each formularios}}
                    <tr>
                        <td class="text-center">{{Titulo}}</td>
                        <td class="text-center">{{PaginasTotales}}</td>
                        <td class="text-center">
                            <a href="/editar-formulario/{{_id}}" class="btn btn-sm btn-info">Editar</a>
                        </td>
                        <td class="text-center">
                            <a href="/demo-formulario/{{_id}}" target="_blank" class="btn btn-primary">Ver</a>
                        </td>
                        <td class="text-center">
                            <a href="#" target="_blank" class="btn btn-success" id="{{_id}}">Generar</a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
                </table>
            </div>
        </div>
    </section>
</div>
<script src="/js/sweetalert2.min.js"></script>
<script src="/js/admin/directorio-formularios.js"></script>
